        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="编码标准"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/codecTypeSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_height="20dp"
                android:background="#000000" />

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="分辨率"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/resolutionSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="优先网络"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/priorityNetworkSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_height="20dp"
                android:background="#000000" />

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="网络切换:"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/netChangeSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="4G参数"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/net4gSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_height="20dp"
                android:background="#000000" />
            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="WIFI模式:"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/wifiModeSpinner"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="@dimen/spinner_layout_height"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="SSID"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/ssid"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:textSize="15dp"
                android:text="ssid" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_height="20dp"
                android:background="#000000" />

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="WIFI密码"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/wifiPassword"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:textSize="15dp"
                android:text="123456" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="serverID"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/serverID"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text"
                android:textSize="15dp"
                android:text="31000000002000000001" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="serverIP"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/serverIP"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text"
                android:textSize="15dp"
                android:text="101.200.134.6" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_height="20dp"
                android:background="#000000" />

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="serverPort"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/serverPort"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="text"
                android:textSize="15dp"
                android:text="5061" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="deviceID"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/deviceID"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text"
                android:textSize="15dp"
                android:text="31000000001310000199" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="password"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_text_size" />

            <EditText
                android:id="@+id/password"
                android:layout_width="@dimen/textview_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="text"
                android:textSize="15dp"
                android:text="123456" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black" />

        <Button
            android:id="@+id/applySettingButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="应用设置" />



    </LinearLayout>

